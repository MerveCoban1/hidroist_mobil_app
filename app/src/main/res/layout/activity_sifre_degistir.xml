<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E2EC"
    android:orientation="vertical"
    android:paddingLeft="70dp"
    android:paddingTop="190dp"
    android:paddingRight="50dp"
    tools:context=".SifreDegistirActivity">

    <EditText
        android:id="@+id/yeniSifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Yeni Sifre: "
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/yeniSifreTekrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Yeni Sifre Tekrar:"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/degistir"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/buton_back"
        android:text="Degistir" />

</LinearLayout>