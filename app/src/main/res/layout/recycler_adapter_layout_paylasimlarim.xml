<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_arka_plan"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/rViewResimImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/rViewYorumTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#60646D" />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/silPostButton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/normal_buton_back_2"
        android:text="Sil" />


</LinearLayout>
